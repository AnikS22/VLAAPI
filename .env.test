# Test Environment Configuration
# DO NOT use in production!

# Environment
ENVIRONMENT=test
DEBUG=true
LOG_LEVEL=WARNING

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
APP_VERSION=1.0.0-test

# Database (Test PostgreSQL)
DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost:5433/vla_test
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (Test Instance)
REDIS_URL=redis://localhost:6380/0
REDIS_MAX_CONNECTIONS=10

# Security (Test Keys - NOT FOR PRODUCTION)
SECRET_KEY=test-secret-key-for-testing-only-change-in-production
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Storage (Test MinIO)
S3_ENDPOINT=http://localhost:9001
S3_ACCESS_KEY=test_access_key
S3_SECRET_KEY=test_secret_key
S3_BUCKET=test-vla-data
S3_REGION=us-east-1
S3_USE_SSL=false

# Features (Disabled for Testing)
ENABLE_GPU_MONITORING=false
ENABLE_EMBEDDINGS=false
ENABLE_PROMETHEUS=true
MOCK_VLA_INFERENCE=true  # Critical: Use mock inference

# Rate Limits (High for testing)
DEFAULT_RATE_LIMIT_RPM=10000
DEFAULT_RATE_LIMIT_RPD=1000000

# CORS (Permissive for testing)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001
CORS_ALLOW_CREDENTIALS=true

# Embedding Models (Use lightweight models for testing)
INSTRUCTION_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
IMAGE_EMBEDDING_MODEL=openai/clip-vit-base-patch32

# Model Configuration
DEFAULT_MODEL=openvla-7b
MODEL_CACHE_DIR=./model_cache
MODEL_DTYPE=float16
MODEL_DEVICE=cpu  # CPU for testing

# Safety
SAFETY_SCORE_THRESHOLD=0.7
ENABLE_SAFETY_CLASSIFIER=true

# Stripe (Test Mode)
STRIPE_API_KEY=sk_test_mock_key_for_testing
STRIPE_WEBHOOK_SECRET=whsec_test_mock_webhook_secret
STRIPE_PRICE_ID_FREE=price_test_free
STRIPE_PRICE_ID_STANDARD=price_test_standard
STRIPE_PRICE_ID_PRO=price_test_pro
STRIPE_PRICE_ID_ENTERPRISE=price_test_enterprise

# Admin (Test Admin User)
ADMIN_EMAIL=admin@test.com
ADMIN_PASSWORD=TestAdminPass123!

# Quotas (Test Values)
FREE_TIER_MONTHLY_QUOTA=100
STANDARD_TIER_MONTHLY_QUOTA=10000
PRO_TIER_MONTHLY_QUOTA=100000
ENTERPRISE_TIER_MONTHLY_QUOTA=1000000

# Rate Limits by Tier
FREE_TIER_RPM=10
FREE_TIER_RPD=1000
STANDARD_TIER_RPM=60
STANDARD_TIER_RPD=10000
PRO_TIER_RPM=300
PRO_TIER_RPD=50000
ENTERPRISE_TIER_RPM=1000
ENTERPRISE_TIER_RPD=200000
